@model WeddingPlanner.ViewModels.AuthViewModel

<head>
    <title> Login / Registration </title>
</head>

<form asp-controller="User" asp-action="Register" method="POST">
    <h1>Registration</h1>
    <h2> New User? Register Here. </h2>
    <p>
        <span asp-validation-for="RegForm.FirstName"></span>
        <label asp-for="RegForm.FirstName"> First Name : </label><input asp-for="RegForm.FirstName"><br><br>
    </p>
    <p>
        <span asp-validation-for="RegForm.LastName"></span>
        <label asp-for="RegForm.LastName"> Last Name : </label><input asp-for="RegForm.LastName"><br><br>
    </p>
    <p>
        <span asp-validation-for="RegForm.Email"></span>
        <label asp-for="RegForm.Email"></label>  Email: <input asp-for="RegForm.Email"><br><br>
    </p>
    <p>
        <span asp-validation-for="RegForm.Password"></span>
        <label asp-for="RegForm.Password">Password : </label><input asp-for="RegForm.Password"><br><br>
    </p>
    <p>
        <span asp-validation-for="RegForm.ConfirmPassword"></span>
        <label asp-for="RegForm.ConfirmPassword">Confirm Password : </label><input asp-for="RegForm.ConfirmPassword"><br><br>
    </p>
            <button>SUBMIT</button>
@if (ViewBag.message != null)
{
  <p>@ViewBag.message</p>
}
</form>
<form asp-controller="User" asp-action="Login" method="POST">


    <p>
        <span asp-validation-for="LoginForm.Email"></span>
        <label asp-for="LoginForm.Email"></label>  Email: <input asp-for="LoginForm.Email"><br><br>
    </p>
    <p>
        <span asp-validation-for="LoginForm.Password"></span>
        <label asp-for="LoginForm.Password">Password : </label><input asp-for="LoginForm.Password"><br><br>
    </p>
    <button>SUBMIT</button>
</form>


@if (ViewBag.message != null)
{
    <p>@ViewBag.message</p>
}

