@using QuotingDojo.Models
@model SurveyViewModel

<head>
        <style>
            .main
                {
                width: 80%;
                height: 100%;
                background-color: lightblue;
                }
            h1, h2, p {
                text-align: center;
                color: purple;
                background-color: sky
                }
            
        </style>
    <title> Quotes </title>
</head>

<body>
    <div class='main'>
        <h1> Here are some quotes :  </h1>
        @foreach (var i in @ViewBag.display)
        {   
            <p>@i["Name"]</p>
            <p>@i["Quote"] </p>
            <p>@i["created_at"].ToString("h:mm tt") @i["created_at"].ToString("MMM dd, yyyy")</p>
        }

        <p> <button> <a href='/'> Go Back </a> </button> </p>
    </div>
</body>

</html>


