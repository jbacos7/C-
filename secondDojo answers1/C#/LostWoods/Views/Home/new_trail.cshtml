@using LostWoods.Models
@model Woods

<head>
        <style>
            .main
                {
                width: 100%;
                height: 100%;
                background-color: burlywood;
                }
            h1, h2, p {
                text-align: 35%;
                color: brown;
                }
            input {
                color: brown;
                text-align: 35%;
            }
        
        </style>
    <title> New Trail </title>
</head>

<body>
    <div class='main'>
    <form asp-controller="Home" asp-action="newtrailadd" method="POST">

        <h1> Add a New Trail:  </h1>
        <span asp-validation-for="Name"></span>
        Trail Name: <input asp-for="Name"><br>

        <span asp-validation-for="Length"></span>
        Trail Length: <input asp-for="Length"><br>

        <span asp-validation-for="Elevation"></span>
        Trail Elevation: <input asp-for="Elevation"><br>

        <span asp-validation-for="Description"></span>
        Trail Description: <input asp-for="Description"><br>

        <span asp-validation-for="Latitude"></span>
        Latitude: <input asp-for="Latitude">  , 

        <span asp-validation-for="Longitude"></span>
        Longitude: <input asp-for="Longitude"><br>

        <input type='submit' value='Add my trail !'>
    </form> 
    <p> <button> <a href='/'> Go Back </a> </button> </p>
    </div>

</body>

