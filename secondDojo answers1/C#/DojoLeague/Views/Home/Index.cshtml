
@using DojoLeague.Models
@model Ninja

<head>
        <style>
            .main
                {
                width: 100%;
                height: 100%;
                background-color: burlywood;
                }
            h1, h2, p {
                text-align: 35%;
                color: brown;
                }
            input {
                color: brown;
                text-align: 35%;
            }
        
        </style>
    <title> New Dojo </title>
</head>

<body>
    <div class='main'>
    <form asp-controller="Home" asp-action="NewNinjaAdd" method="POST">

        <h1> Register A Ninja:  </h1>
        <span asp-validation-for="NinjaName"></span>
        Ninja Name: <input asp-for="NinjaName"><br>

        <span asp-validation-for="NinjaLevel"></span>
        Ninja Level:
            <select asp-for="NinjaLevel">
            <option value=null>Select One:</option>
            <option value="1"> 1 </option>
            <option value="2"> 2 </option>
            <option value="3"> 3 </option>
            <option value="4"> 4 </option>
            <option value="5"> 5 </option>
            <option value="6"> 6 </option>
            <option value="7"> 7 </option>
            <option value="8"> 8 </option>
            <option value="9"> 9 </option>
            <option value="10"> 10 </option>
            </select> <br>

        <span asp-validation-for="dojo_id"></span>
        Assigned Dojo?  <input asp-for="dojo_id"><br>

        <span asp-validation-for="NinjaDescription"></span>
        Additional Ninja Information: <input asp-for="NinjaDescription"><br>

        <input type='submit' value='Add my Ninja !'>
    </form> 
    <p> <button> <a href='/dojos'> Go to Dojos </a> </button> </p>

    </div>

</body>